# ENVIRONMENT FILES - NEVER COMMIT!
# ============================================
.env
.env.local
.env.development
.env.production
.env*.local

# ============================================
# DEPENDENCIES
# ============================================
/node_modules
/.pnp
.pnp.*
.yarn/*
!.yarn/patches
!.yarn/plugins
!.yarn/releases
!.yarn/versions

# ============================================
# BUILD & CACHE
# ============================================
/.next/
/out/
/build
/dist
*.tsbuildinfo
next-env.d.ts

# ============================================
# TESTING
# ============================================
/coverage

# ============================================
# LOCK FILES (keep only one)
# ============================================
bun.lock
# Keep package-lock.json OR yarn.lock, not both

# ============================================
# VERCEL
# ============================================
.vercel

# ============================================
# DEBUG LOGS
# ============================================
npm-debug.log*
yarn-debug.log*
yarn-error.log*
.pnpm-debug.log*

# ============================================
# OS & MISC
# ============================================
.DS_Store
Thumbs.db
*.pem
